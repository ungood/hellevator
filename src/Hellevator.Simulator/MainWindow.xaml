<Window x:Class="Hellevator.Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Simulator="clr-namespace:Hellevator.Simulator"
		Title="MainWindow" Width="820" Height="620" MinWidth="820" MinHeight="620">  
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    
    <StackPanel>
      <Button Content="Call" Command="{Binding CallButton.Click}" />
      <Button Content="Panel" Command="{Binding PanelButton.Click}" />
    </StackPanel>
    
    <Simulator:Carriage Grid.Column="1" MinWidth="620" MinHeight="620" />
  </Grid> 
</Window>
