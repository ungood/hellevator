<Window x:Class="Hellevator.Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Simulator="clr-namespace:Hellevator.Simulator"
    xmlns:Data="clr-namespace:Hellevator.Simulator.Data"
    Title="Hellevator Simulator" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
  <Grid >
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    
    <Simulator:Carriage Grid.Column="0" />
    <Simulator:LightStrip Grid.Column="1" />
    <Simulator:Panel Grid.Column="2"/>
  </Grid> 
</Window>
