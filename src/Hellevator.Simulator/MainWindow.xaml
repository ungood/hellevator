<Window x:Class="Hellevator.Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Simulator="clr-namespace:Hellevator.Simulator"
		Title="MainWindow" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
  <Grid >
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    
    <StackPanel>
      <Button Content="Call" Command="{Binding CallButton.Click}" />
    </StackPanel>
    
    <Simulator:Carriage Grid.Column="1" />
    <Simulator:Panel Grid.Column="2"/>
  </Grid> 
</Window>
